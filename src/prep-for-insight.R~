library(tidytext)

#' removes stopwords
#'
#' @param data a dataframe containing a column named 'text' with text
#'     of interest contained within
#'
#' @param sw_list char naming a default stopword list
#'
#' @param addl char vector of additional stopwords
#'
#' @return a dataframe equivalent to the input dataframe, with stopwords removed
stopword_remove <- function(data, sw_list="snowball", addl="",
                            to_lower=TRUE){
    sw <- get_stopwords(source = sw_list)
    data_words <- unnest_tokens(data, word, text, to_lower=to_lower)




}




    

